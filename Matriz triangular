 #include <iostream>
   using namespace std;
   
   void imprime_linea(int);
   bool esTriangular(int N);
   
   int main()
  {
       int suma=0, i=1, n;
     cout << "Intro numero: ";    cin >>  
  if(esTriangular(n))
      {
          cout << "Es triangular" << endl;
          suma=0;
          for(int i=1; suma<n; i++)
          {
              suma+=i;
              imprime_linea(i);
          }
      }
      else
          cout << "No es triangular" << endl;  }
  
  void imprime_linea(int i)
  {
      for(int j=0; j<i; j++)
          cout << "*";
  
      cout << endl;
  }
  
  bool esTriangular(int N)
  {
      int suma=0;
      for(int i=1; suma<N; i++)
          suma+=i;
      if (suma==N)
          return true;
      else
          return false;
  }
